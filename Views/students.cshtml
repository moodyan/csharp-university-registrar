@{
  Layout="Shared/_Layout.cshtml";
}
@if (@Model.Count == 0)
{
  <p>No students have been added yet!</p>
}
else
{
  <h1>Here is your list of students:</h1>
  <ul>
    @foreach (var student in Model)
    {
      <li><a href='/student/@student.GetId()'>@student.GetLastName(), @student.GetFirstName()</a></li>
    }
  </ul>
  <form action="/students/delete" method="post">
    <button type="submit" class="btn btn-danger">Delete all students</button>
  </form>
}
<p><a href="/student/new">Add a new student</a></p>
<p><a href="/">Return home</a></p>
